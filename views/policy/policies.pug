      $(document).on("click","#deleteSelect", function () {
        var idArray = "";
        $('input[type="checkbox"]').each(function(){
        if($(this). prop("checked") == true && this.id != "selectAll"){
        idArray += $(this).data('id') + ',';
        }
        });
        idArray = idArray.substring(0, idArray.length - 1);
        $(".modal-body #policyId").val(idArray);
        $('#deletePolicyModal').modal('show');
      });  

    
block content
   .container
      .table-wrapper
        .table-title
          .row
            .col-sm-6
              h2
                | Manage 
                b Policy
            .col-sm-6
              a.btn.btn-success(href='#addPolicyModal', data-toggle='modal')
                i.material-icons 
                span Add New Policy
              a.btn.btn-danger(href='#deletePolicyModal',id="deleteSelect", data-toggle='modal')
                i.material-icons 
                span Delete
        table#usersTable.table.table-striped.table-sm(width='100%')
          thead
            tr
              th(scope='col')
                span.custom-checkbox
                  input#selectAll(type='checkbox')
                  label(for='selectAll')
              th(scope='col') Policy Number
              th(scope='col') Attribute
              th(scope='col') Status
              th(scope='col') Client Number
              th(scope='col') Agent Number
              th(scope='col') Created
              th(scope='col') Status Updated Date
              th(scope='col') Note
              th(scope='col') Type
              th(scope='col') Action

          - var count = 1
          each policy in policies
            - var idPolicy = policy._id
            tr
              td
                span.custom-checkbox
                  input#checkbox1(type='checkbox', name='options[]', value=count++,data-id=idPolicy)
                  label(for='checkbox1')
              td#policyColumn= policy.policyNumber
              td#policyColumn= policy.attribute
              td#policyColumn= policy.status
              td#policyColumn= policy.clientNumber
              td#policyColumn= policy.agentNumber
              td#policyColumn= policy.created
              td#policyColumn= policy.statusUpdateDate
              td#policyColumn= policy.note
              td#policyColumn= policy.type 
              td#policyColumn
                a.edit(href='#editPolicyModal', data-toggle='modal',id="editId"+ count,data-id=idPolicy, data-epolicynumber=policy.policyNumber, 
                data-attribute=policy.attribute, data-status=policy.status, data-eclientnumber=policy.clientNumber
                data-eagentnumber=policy.agentNumber, data-created=policy.created, data-estatusupdatedate=policy.statusUpdateDate
                data-note=policy.note,data-type=policy.type)
                  i.material-icons(data-toggle='tooltip', title='Edit') 
                a.delete(href='#deletePolicyModal', data-toggle='modal', data-id=idPolicy)
                  i.material-icons(data-toggle='tooltip', title='Delete') 
          include addModal
          include editModal
          include deleteModal
      
